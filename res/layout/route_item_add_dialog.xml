<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.app.ant"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_weight="1" 
    android:padding="5dp"
    android:id="@+id/routeItemAdd"
    >
		<LinearLayout
		   android:orientation="horizontal"
		   android:layout_width="fill_parent"
		   android:layout_height="wrap_content"	   
		 >	   
		 	<TextView
			android:id="@+id/textDialogTitle"  
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			android:text="@string/route_item_add"
		   	android:paddingBottom="10dip"
			/>
			
		   	<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:id="@+id/datePanel"
	        android:clickable="true"
	        android:paddingLeft="3dip"	        
	        android:layout_gravity="right"
	        android:layout_weight="1"
		    >
				<TextView
				android:text="@string/route_item_date"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"			
				android:textColor="#FFFFFF"
				android:textStyle="bold"
				android:maxLines="1"
				android:layout_gravity="right"
				/>
				
				<TextView
				android:id="@+id/textDate"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"			
				android:textColor="@color/item_info_color"
				android:maxLines="1"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_gravity="right"				
				/>				
			</LinearLayout>	
			
		</LinearLayout>   
    
    	<ExpandableListView android:id="@+id/clientAddrExpandableList" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        />    

</LinearLayout>

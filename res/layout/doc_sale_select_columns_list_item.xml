<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="2dp"
	> 
    
	 	<RelativeLayout 
			android:id="@+id/columnItemLayout"
			android:layout_width="match_parent"
    		android:layout_height="35dp"
    		android:paddingTop="2dp"    
	        android:layout_gravity="left"
	    >
	    
		    <TextView android:id="@+id/textColumnName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
	   	        android:textColor="#FF000000"
		        android:background="#FFFFFFFF"
		        android:text="ColumnName"
		        android:singleLine="true"
		        android:gravity="top"
		    />
		    <TextView android:id="@+id/textColumnDescription"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
	   	        android:textColor="#FF555555"
		        android:background="#FFFFFFFF"
		        android:textSize="10dp"
		        android:text="ColumnDescription"
		        android:singleLine="true"
		        android:layout_below="@+id/textColumnName"
		    /> 
		 	   
		    <CheckBox
				android:id="@+id/chkBoxColumnVisible"  
				android:layout_width="36dp" 
				android:layout_height="33dp"
				android:checked = "false"
				android:layout_toLeftOf="@+id/buttonColumnUp"				
			/>
			
	   		<ImageButton
				android:id="@+id/buttonColumnUp"
			   	android:layout_width="36dp	" 
		   		android:layout_height="33dp	"
		   		android:text="@string/doc_sale_selectColumns_up"
		   		android:src="@drawable/arrow_up"		   		
		   		android:layout_toLeftOf="@+id/buttonColumnDown"
	   		/>
	   		
	   		<ImageButton
				android:id="@+id/buttonColumnDown"
		 	  	android:layout_width="36dp" 
		   		android:layout_height="33dp	"
		   		android:text="@string/doc_sale_selectColumns_down"
		   		android:src="@drawable/arrow_down"		   		
		   		android:layout_alignParentRight="true"
	   		/>

   		    
		</RelativeLayout>	 
		
  
			 	       
</LinearLayout>

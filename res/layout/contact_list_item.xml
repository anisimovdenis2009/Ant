<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contactLayout"
   >

	 	<RelativeLayout 
			android:id="@+id/columnContactLayout"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="#FFFFFF"
    		android:paddingTop="2dp"    
	        android:layout_gravity="left"
	    >
				<ImageView
					android:id="@+id/ContactPic"
					android:paddingLeft="1dip"
					android:paddingTop="8dip"
				   	android:layout_width="wrap_content" 
				   	android:layout_height="wrap_content"
				   	android:src="@drawable/contact_entry"
				   	android:gravity="top" android:layout_centerVertical="true"/>
			   	
			    <TextView android:id="@+id/textPerson"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceLarge"					
					android:textStyle="bold"	
					android:textSize="13dp"	
					android:layout_toRightOf="@+id/ContactPic"		        
			    />
			    
			    <TextView android:id="@+id/textPosition"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:textSize="12dp"
			        android:layout_toRightOf="@+id/ContactPic"
			        android:layout_below="@+id/textPerson"
			    />
				    
<!--   	    		<ImageView
  	    			android:id="@+id/Envelope"
					android:padding="3dip"
					android:layout_width="15px" 
					android:layout_height="15px"
					android:gravity="center_vertical"
					android:src="@drawable/phone"
		        	android:layout_toRightOf="@+id/ContactPic"
		        	android:layout_below="@+id/textPosition"					
				/>

			 -->    
				<TextView 
					android:id="@+id/textPhone1"
		        	android:layout_width="match_parent"
		        	android:layout_height="wrap_content"
		        	android:textSize="12dp"
		        	android:layout_toRightOf="@+id/ContactPic"
		        	android:layout_below="@+id/textPosition"
			    />
			    				    
		    
				<ImageButton
					style="?android:attr/buttonStyleSmall"
					android:id="@+id/buttonDeleteContact"  
				   	android:layout_width="wrap_content" 
				   	android:layout_height="wrap_content"
				   	android:src="@drawable/doc_delete_small"
					android:layout_alignParentRight="true"				   	
			   	android:layout_centerVertical="true"/>

				<ImageButton
					style="?android:attr/buttonStyleSmall"
					android:id="@+id/buttonEditContact"  
				   	android:layout_width="wrap_content" 
				   	android:layout_height="wrap_content"
				   	android:src="@drawable/doc_edit_small"
					android:layout_toLeftOf="@+id/buttonDeleteContact" android:layout_centerVertical="true"/>   		
   	</RelativeLayout> 
	   						

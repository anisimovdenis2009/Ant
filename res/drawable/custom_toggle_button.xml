		      <shape>		         		         
		            <gradient
		                android:startColor="#FF00FF00"
		                android:endColor="#FF008800"
		                android:angle="270" />
		            <stroke
		                android:width="0dp"
		                android:color="#FFFF0000" />
				    <size
				        android:height="2px"
				        android:width="20px"
					/>		                
		            <corners
		                android:radius="3dp" />

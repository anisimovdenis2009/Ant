<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|left">
    
	<ImageView
	android:id="@+id/imgAddress"
	android:paddingLeft="8dip"
	android:paddingTop="4dip"
   	android:layout_width="wrap_content" 
   	android:layout_height="wrap_content"
   	android:src="@drawable/address_icon"/>
	
	<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|left">
    
		<ImageView
		android:id="@+id/imgSalePoint"
		android:paddingLeft="2dip"
		android:paddingTop="4dip"
		android:paddingRight="4dip"
	   	android:layout_width="wrap_content" 
	   	android:layout_height="wrap_content"
	   	android:src="@drawable/mark_letter_p_cyr"/>
		
		<ImageView
		android:id="@+id/imgOrderPoint"
		android:paddingLeft="2dip"
		android:paddingTop="4dip"
		android:paddingRight="4dip"
	   	android:layout_width="wrap_content" 
	   	android:layout_height="wrap_content"
	   	android:src="@drawable/mark_letter_z_cyr"/>
		
	</LinearLayout>		    		
   	
	<ImageView
	android:id="@+id/imgGold"
	android:paddingRight="4dip"
	android:paddingTop="4dip"
   	android:layout_width="wrap_content" 
   	android:layout_height="wrap_content"
   	android:src="@drawable/medal_gold"
   	android:visibility="gone"/>   	

	<ImageView
	android:id="@+id/imgSilver"
	android:paddingRight="4dip"
	android:paddingTop="4dip"
   	android:layout_width="wrap_content" 
   	android:layout_height="wrap_content"
   	android:src="@drawable/medal_silver"
   	android:visibility="gone"/>   	

    <TextView android:id="@+id/text_address"
   	android:layout_width="match_parent"
   	android:layout_height="wrap_content"
   	android:layout_weight="1"
   	/>
   	
   	<ImageView
	android:id="@+id/imgDeleteItem"
	android:paddingLeft="8dip"
	android:paddingTop="4dip"
   	android:layout_width="wrap_content" 
   	android:layout_height="wrap_content"
   	android:src="@drawable/doc_delete_small"
   	android:visibility="gone"/>

	<LinearLayout
	android:id="@+id/chartProgressBkg"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:clickable="true"
    >

		<com.app.ant.app.Controls.ChartView	
		android:id="@+id/chartProgress"
		android:background="@drawable/blue"
	   	android:layout_width="25dip"
	   	android:layout_height="15dip"
		/>    
	</LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#FFFFC721"
                android:endColor="#FFEFA600"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFEFA600" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#FFAAAAAA"
                android:endColor="#FF757575"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FF000000" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item  android:state_checked="true" >
		<layer-list>
		   <item>
		        <shape>
		            <gradient
                		android:startColor="#FF757575"
                		android:endColor="#FF151515"
		                android:angle="270" />
		            <stroke
		                android:width="1dp"
		                android:color="#FF000000" />
		            <corners
		                android:radius="1dp" />
		            <padding
		                android:left="10dp"
		                android:top="2dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
		   </item>
	   
		   <!--item>
		   		<bitmap
    			android:src="@drawable/toggle_on"
    			android:gravity="bottom|fill_horizontal" />
    		</item-->
    		
		   <item android:left="3px" android:right="3px">
		   		<bitmap
    			android:src="@drawable/toggle_on_mid"
    			android:gravity="bottom|fill_horizontal" />
    		</item>
    		
		   <item>
		   		<bitmap
    			android:src="@drawable/toggle_on_left"
    			android:gravity="bottom|left" />
    		</item>

		   <item>
		   		<bitmap
    			android:src="@drawable/toggle_on_right"
    			android:gravity="bottom|right" />
    		</item>
    		
		</layer-list>            
    </item>
    

    <item>
		<layer-list>
		   <item>
		        <shape>
		            <gradient
                		android:startColor="#FF757575"
                		android:endColor="#FF151515"
		                android:angle="270" />
		            <stroke
		                android:width="1dp"
		                android:color="#FF000000" />
		            <corners
		                android:radius="1dp" />
		            <padding
		                android:left="10dp"
		                android:top="2dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
		   </item>
		   
		   <!-- item android:drawable="@drawable/toggle" /-->
		   
		   <item android:left="3px" android:right="3px">
		   		<bitmap
    			android:src="@drawable/toggle_off_mid"
    			android:gravity="bottom|fill_horizontal" />
    		</item>
    		
		   <item>
		   		<bitmap
    			android:src="@drawable/toggle_off_left"
    			android:gravity="bottom|left" />
    		</item>

		   <item>
		   		<bitmap
    			android:src="@drawable/toggle_off_right"
    			android:gravity="bottom|right" />
    		</item>
    		
	   

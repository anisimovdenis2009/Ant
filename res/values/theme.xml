<resources>
    <style name="Theme.Ant" parent="@android:style/Theme.Light">        
    </style>
    
	<style name="ToolPanel">
		<!-- item name="android:background">@drawable/tool_panel_bkg1</item-->
		<!--item name="android:background">#313131</item-->
		<item name="android:background">@drawable/tab_background</item>
	</style>
	
	<style name="SmallLabelText" parent="SmallText">
		<item name="android:textStyle">bold</item>
	</style>	
	
	<style name="SmallText">
		<item name="android:textSize">11dp</item>
	</style>	
	
	<style name="StepButtonPlacement" parent="ToolPanel">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">0</item>
		<item name="android:layout_gravity">bottom</item>
	</style>
	
	<style name="TabsPlacement" >
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">0</item>
		<item name="android:layout_gravity">bottom</item>
		<item name="android:background">#000000</item>
	</style>

	<style name="AlphabetFilterButton" parent="CustomButton">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">11dp</item>
		<item name="android:layout_weight">1</item>
	</style>
	
    <style name="CustomButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="CustomButtonTransparent" parent="CustomButton">
        <item name="android:background">@drawable/custom_button_transparent</item>
    </style>
    
    
    <style name="CustomButtonLight" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custom_button_light</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CustomToggleButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custom_toggle_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="alidi">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>

